@model IEnumerable<Books.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Passage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="test" id="@item.ID">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passage)
            </td>
            <td>
                <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="lib/jquery/dist/jquery.js"></script>
<script src="lib/bootstrap/dist/js/bootstrap.js"></script>
@foreach (var item in Model)
{
<script>
        $(document).ready(function() {
            $("#@item.ID").mouseover(function() {
                $("#@item.ID").css("background-color", "yellow");
                });
            $("#@item.ID").mouseout(function() {
                $("#@item.ID").css("background-color", "");
                });
        });
 
</script>
}

